<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="24dp"
    tools:context=".view.ui.ProductActivity">

    <TextView
        android:id="@+id/p_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Name: "
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="Kebap"
        android:imeOptions="actionDone"
        android:inputType="text"
        app:layout_constraintBaseline_toBaselineOf="@id/p_name"
        app:layout_constraintStart_toEndOf="@id/p_name" />

    <TextView
        android:id="@+id/p_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Description: "
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/p_name" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="from Mustafa Gemüse Döner"
        android:imeOptions="actionDone"
        android:inputType="text"
        app:layout_constraintBaseline_toBaselineOf="@id/p_description"
        app:layout_constraintStart_toEndOf="@id/p_description" />

    <TextView
        android:id="@+id/p_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Price: "
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/p_description" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="9.50"
        android:inputType="numberDecimal"
        app:layout_constraintBaseline_toBaselineOf="@id/p_price"
        app:layout_constraintStart_toEndOf="@id/p_price" />

    <TextView
        android:id="@+id/p_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Quantity: "
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/p_price" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="2"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@id/p_qty"
        app:layout_constraintStart_toEndOf="@id/p_qty" />

</androidx.constraintlayout.widget.ConstraintLayout>